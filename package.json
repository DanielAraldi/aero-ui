{
  "name": "aero-ui",
  "description": "Aero UI evokes a sense of lightness, fluidity, and sophistication based in the TailwindCSS principles üçÉ",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/DanielAraldi/aero-ui"
  },
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "build:docker": "docker build . && docker image prune -f",
    "changeset": "changeset",
    "changeset:version": "changeset version",
    "changeset:publish": "changeset publish",
    "clean": "turbo run clean && rm -rf node_modules",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\" --ignore-path .gitignore",
    "prepare": "husky",
    "test": "turbo run test"
  },
  "author": "Daniel Sans√£o Araldi <danielsaraldi@gmail.com> (https://github.com/DanielAraldi)",
  "license": "MIT",
  "dependencies": {
    "@changesets/cli": "^2.27.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.6.1",
    "@commitlint/config-conventional": "^19.6.0",
    "husky": "^9.1.7",
    "prettier": "^3.1.1",
    "turbo": "^2.3.3"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22"
}
